<!DOCTYPE html>
<html lang="en">

<!--Head-->
<%- include("../partials/head" ,{stylesheet:"styles", title:"Crear producto"}) %>

	<body>
		<!--Header-->
		<%- include("../partials/header") %>
			<!-- /Header -->
			<main>
				<section class="product-creator">
					<div class="title">
						<h2 class="products-title">Agregar nuevo menú</h2>
					</div>
					<ul class="fails">
					</ul>
					<div class="formulario">
						<form action="/products" method="POST" enctype="multipart/form-data" class="form">
							<div class="row-product-detail">
								<div class="col-12 col-md-6">
									<label for="title" class="form-label">Nombre del plato</label>
									<input type="text" id="title" name="title" placeholder="Ej: Medovik"
										class="form-input" autofocus required>
								</div>
								<div class="col-12">
									<label for="description" class="form-label">Descipción</label>
									<textarea name="description" id="description" class="form-input"
										required></textarea>
								</div>
								<div class="col-12">
									<label for="ingredients" class="form-label">Ingredientes</label>
									<textarea name="ingredients" id="ingredients" class="form-input"
										required></textarea>
								</div>

								<div class="col-12 col-md-6">
									<label for="price" class="form-label">Precio del plato</label>
									<input type="number" id="price" name="price" placeholder="Ej: 800"
										class="form-input" required>
								</div>
								<div class="col-12 col-md-6">
									<label for="todaysDay" class="form-label">Menu del dia</label>
									<select name="todaysDay" id="todaysDay" class="form-input" required>
										<option disabled selected>Elegir</option>
										<option value="1">Si</option>
										<option value="0">No</option>
									</select>
								</div>
								<div class="col-12 col-md-6">
									<label for="category" class="form-label">Categoría:</label>
									<select name="category" id="category" class="form-input" required>
										<option disabled selected>Elegir</option>
										<option value="1">Entrada</option>
										<option value="2">Plato principal</option>
										<option value="3">Postre</option>
									</select>
								</div>
								<div class="col-12 col-md-6">
									<label for="img" class="form-label">Imagen:</label>
									<form action="/products" method="POST" enctype="multipart/form-data">
										<input class="form-input" type="file" id= "image" name="product_img" accept=".jpg, .JPG, .png">
								</div>
								<div class="detail-button">
									<button type="submit" class="create-buttom"  name="send-product">Agregar
										producto</button>
								</div>
							</div>
						</form>
					</div>
					</form>
				</section>
			</main>
			
			<!--Footer-->
			<%- include("../partials/footer") %>
				<!--Footer-->
				<script src="/js/productCreate.js"></script>
			</body>

</html>